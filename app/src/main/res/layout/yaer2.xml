<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="208dp"
        android:layout_height="35dp"
        android:text="please select your courses:"
        app:layout_constraintBottom_toTopOf="@+id/CC"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="83dp" />

    <CheckBox
        android:id="@+id/CC"
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:text="C++"
        app:layout_constraintBottom_toTopOf="@+id/C"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="89dp" />

    <CheckBox
        android:id="@+id/C"
        android:layout_width="202dp"
        android:layout_height="46dp"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@+id/Lab1"
        app:layout_constraintTop_toBottomOf="@+id/CC"
        tools:layout_editor_absoluteX="89dp" />

    <CheckBox
        android:id="@+id/Lab1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="C++ Lab"
        app:layout_constraintBottom_toTopOf="@+id/Lab2"
        app:layout_constraintTop_toBottomOf="@+id/C"
        tools:layout_editor_absoluteX="89dp" />

    <CheckBox
        android:id="@+id/Lab2"
        android:layout_width="198dp"
        android:layout_height="50dp"
        android:text="C Lab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lab1"
        tools:layout_editor_absoluteX="93dp" />

    <Button
        android:id="@+id/Submit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="144dp"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lab1" />

    <Button
        android:id="@+id/Cancel2"
        android:layout_width="114dp"
        android:layout_height="46dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="88dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toEndOf="@+id/Submit2"
        app:layout_constraintTop_toBottomOf="@+id/Lab1" />
</androidx.constraintlayout.widget.ConstraintLayout>